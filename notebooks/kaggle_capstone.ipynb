# %% [markdown]
# ## ‚úÖ 10. (Optional) Add Gantt Chart for Schedule
# Visualizes task timelines if start/end times are available.

# %%
import matplotlib.pyplot as plt

if isinstance(tasks, list) and len(tasks) > 0:
    fig, ax = plt.subplots(figsize=(10, 6))
    for i, task in enumerate(tasks):
        start = task.get("start_time", i)
        end = task.get("end_time", i + 1)
        ax.barh(i, end - start, left=start)
        ax.text(start, i, task.get("task", ""), va='center', ha='left')
    ax.set_xlabel("Time")
    ax.set_ylabel("Tasks")
    plt.show()

